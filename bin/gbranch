#!/bin/bash

run_command() {
  if [ -d $1 ]
  then
    cd $1
    if [ -d '.git' ]
    then
      M='Branches'
      echo ${M-''} `pwd` `git branch 2>/dev/null | grep -e '^*' | sed -E 's/^\* (.+)$/(\1) /'`
      git branch
    fi
    cd - 1>/dev/null
  fi
}

while getopts ':a' opt; do
  case $opt in
    a)
      shift
      cd ${1-'.'}
      for entry in *; do
        run_command $PWD'/'$entry
        read-p '...'; echo ''
      done
      exit 0
      ;;
  esac
done

run_command ${1-'.'}